
// Conf type declares the entries and types for configuring an interactive graphics application.
Conf < (
    string window_name: Window;
    ivec2 gl_version;
    bool core_profile;
    vec4 clear_color: 0,0,0,1;
);

Aspect < (
    bool enabled: true;
);
Transform < Aspect (
    vec3 position: 0,0,0;
    vec3 rotation: 0,0,0;
);

GameObject < (
    bool active: true;
);
Spider < GameObject (
    transform < Transform;
    int num_legs: 8;
);

free_spider < Spider (
    transform < (
        position: 0,0,100;
    );
);

Scene < (
    #include(scene);
);

// Source a configuration.
ApplicationConfiguration < Conf (
    #include(conf);
);

// Testing dictionary type evaluation.
D < (
    bool e2: false;
);
B < D (
    bool e1: true;
);
C < (
    bool e3: true;
);
A < B C (
    // Should be of types [B, D, C].
    bool e4: false;
);
